# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET		/learnMore					controllers.Application.learnMore()
GET 	/learnMore/details			controllers.Application.learnMoreDetails()
GET		/admin						controllers.Admin.index()
GET		/admin/reports 				controllers.Admin.reports()
POST	/admin/addInvitee			controllers.Admin.addInvitee()
GET		/admin/invitees				controllers.Admin.getInvitees()
GET 	/dashboard 					controllers.Dashboard.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
